{
    "build": {
        "dockerfile": "./Dockerfile",
        "context": "../..",
        "args": {
            "PHP_VERSION": "${localEnv:PHP_VERSION}",
            "PHP_VERSION_STR": "${localEnv:PHP_VERSION_STR}"
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": "true",
            "username": "phpctl",
            "userUid": "1000",
            "userGid": "1000",
            "upgradePackages": "true"
        }
    },
    "remoteUser": "phpctl"
}
